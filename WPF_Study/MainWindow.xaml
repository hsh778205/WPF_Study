<Window x:Class="WPF_Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Study"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="AUTO"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Width="100" Height="100" Content="我是一倍"/>
        <Button Grid.Column="1" Width="100" Height="100" Content="我是两倍"/>
        <Button Grid.Column="2" Width="100" Height="100" Content="我是不变"/>
        <Button Grid.Column="3" Width="100" Height="100" Content="我是自动 挤死了"/>
        <Button Grid.Column="4" Width="100" Height="100" Content="我也是自动 好挤"/>
    </Grid>
</Window>
